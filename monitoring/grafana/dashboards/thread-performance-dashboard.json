{
  "id": null,
  "uid": "thread-performance-clean",
  "title": "ðŸ§µ Thread Performance Demo Dashboard",
  "description": "Clean, focused dashboard for demonstrating Platform vs Virtual Threads performance",
  "tags": ["demo", "threads", "performance", "comparison"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "5s",
  "schemaVersion": 30,
  "version": 1,
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "ðŸ§µ Thread Count",
      "type": "stat",
      "targets": [
        {
          "expr": "jvm_threads_live_threads{job=\"spring-boot-platform\"}",
          "legendFormat": "Platform Threads",
          "refId": "A"
        },
        {
          "expr": "jvm_threads_live_threads{job=\"spring-boot-virtual\"}",
          "legendFormat": "Virtual Threads",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "displayMode": "basic",
            "orientation": "horizontal"
          },
          "unit": "short",
          "min": 0,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "orange", "value": 180 },
              { "color": "red", "value": 200 }
            ]
          },
          "fontSize": "150%"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Platform Threads" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "red" } },
              { "id": "max", "value": 250 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Virtual Threads" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "green" } },
              { "id": "max", "value": 2000 }
            ]
          }
        ]
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "value_and_name",
        "colorMode": "background"
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "ðŸš€ Requests Per Second",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=\"spring-boot-platform\"}[1m]))",
          "legendFormat": "Platform RPS",
          "refId": "A"
        },
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=\"spring-boot-virtual\"}[1m]))",
          "legendFormat": "Virtual RPS",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "none",
          "decimals": 0,
          "min": 0,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "orange", "value": 30 },
              { "color": "red", "value": 50 }
            ]
          },
          "fontSize": "150%"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Platform RPS" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "red" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Virtual RPS" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "green" } }
            ]
          }
        ]
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "value_and_name",
        "colorMode": "background"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "id": 3,
      "title": "ðŸ“ˆ Thread Growth Over Time",
      "type": "graph",
      "lines": true,
      "lineWidth": 2,
      "points": false,
      "targets": [
        {
          "expr": "jvm_threads_live_threads{job=\"spring-boot-platform\"}",
          "legendFormat": "Platform Threads",
          "refId": "A",
          "interval": "5s"
        },
        {
          "expr": "jvm_threads_live_threads{job=\"spring-boot-virtual\"}",
          "legendFormat": "Virtual Threads",
          "refId": "B",
          "interval": "5s"
        }
      ],
      "yAxes": [
        {
          "label": "Thread Count",
          "format": "short",
          "min": 0,
          "max": 500,
          "decimals": 0,
          "logBase": 1,
          "show": true
        }
      ],
      "seriesOverrides": [
        {
          "alias": "Platform Threads",
          "color": "#F2495C",
          "lineWidth": 2
        },
        {
          "alias": "Virtual Threads",
          "color": "#73BF69",
          "lineWidth": 2
        }
      ],
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 8 }
    }
  ]
}
